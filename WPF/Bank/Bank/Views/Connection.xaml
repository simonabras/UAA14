<Page x:Class="Bank.Views.Connection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bank.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Connection">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Label FontWeight="Bold">Connexion</Label>
            <WrapPanel>
                <Label Margin="10">Login (mail)</Label>
                <TextBox x:Name="login" Height="30" Width="200"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Margin="10">Mot de passe</Label>
                <TextBox x:Name="password" Height="30" Width="200"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Button x:Name="connection" Click="connection_Click" Height="40" Width="300">CONNEXION</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
